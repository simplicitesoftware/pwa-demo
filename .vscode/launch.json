{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Start",
            "runtimeExecutable": "npm",
            "runtimeArgs": [ "run-script", "start" ]
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug in Chrome",
            "url": "http://localhost:3000/",
            "webRoot": "${workspaceFolder}/app"
        }
    ]
}